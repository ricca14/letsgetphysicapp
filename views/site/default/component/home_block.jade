.main-cella
    - var i = (indice_riga + indice_colonna) + 1
    if indice_riga == 1
        - i = i + 2
    - var class_cella = 'cella-'+i
    - var last_block = ''
    if i == 3
        - var last_block = 'last_block'

    .main_block.hvr-grow(class="#{class_cella} #{last_block}")
        .block-title
            span
                p #{titolo}

